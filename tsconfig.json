{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/design/*": [
        "src/design/*"
      ]
    }
  }
}