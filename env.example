# MIMO Camera App Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# App Environment (development, staging, production)
EXPO_PUBLIC_ENV=development

# Expo Project ID (optional - for local notifications only)
EXPO_PUBLIC_PROJECT_ID=your-expo-project-id

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL (optional - will be auto-detected based on environment)
EXPO_PUBLIC_API_URL=http://192.168.0.9:4001/api

# API Timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=10000

# API Retry Attempts
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3

# API Retry Delay (milliseconds)
EXPO_PUBLIC_API_RETRY_DELAY=1000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket URL (optional - will be auto-detected based on environment)
EXPO_PUBLIC_WS_URL=ws://192.168.0.9:8080

# WebSocket Reconnect Attempts
EXPO_PUBLIC_WS_RECONNECT_ATTEMPTS=5

# WebSocket Reconnect Delay (milliseconds)
EXPO_PUBLIC_WS_RECONNECT_DELAY=2000

# WebSocket Heartbeat Interval (milliseconds)
EXPO_PUBLIC_WS_HEARTBEAT_INTERVAL=30000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Token Refresh Threshold (minutes before expiry)
EXPO_PUBLIC_TOKEN_REFRESH_THRESHOLD=5

# Maximum Token Age (minutes)
EXPO_PUBLIC_MAX_TOKEN_AGE=60

# Secure Storage Keys (optional - defaults will be used)
EXPO_PUBLIC_ACCESS_TOKEN_KEY=mimo_access_token
EXPO_PUBLIC_REFRESH_TOKEN_KEY=mimo_refresh_token
EXPO_PUBLIC_USER_DATA_KEY=mimo_user_data

# =============================================================================
# RECORDING CONFIGURATION
# =============================================================================

# Maximum File Size (MB)
EXPO_PUBLIC_MAX_FILE_SIZE=100

# Maximum Recording Duration (seconds)
EXPO_PUBLIC_MAX_RECORDING_DURATION=300

# Default Recording Quality (480p, 720p, 1080p)
EXPO_PUBLIC_DEFAULT_RECORDING_QUALITY=720p

# Recording Compression (low, medium, high)
EXPO_PUBLIC_RECORDING_COMPRESSION=medium

# Recording Storage Path
EXPO_PUBLIC_RECORDING_STORAGE_PATH=recordings

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Default Sound Enabled
EXPO_PUBLIC_DEFAULT_SOUND_ENABLED=true

# Default Vibration Enabled
EXPO_PUBLIC_DEFAULT_VIBRATION_ENABLED=true

# Quiet Hours Enabled
EXPO_PUBLIC_QUIET_HOURS_ENABLED=false

# Quiet Hours Start (HH:mm)
EXPO_PUBLIC_QUIET_HOURS_START=22:00

# Quiet Hours End (HH:mm)
EXPO_PUBLIC_QUIET_HOURS_END=08:00

# =============================================================================
# MOTION DETECTION CONFIGURATION
# =============================================================================

# Motion Detection Enabled
EXPO_PUBLIC_MOTION_DETECTION_ENABLED=true

# Default Sensitivity (low, medium, high)
EXPO_PUBLIC_DEFAULT_SENSITIVITY=medium

# Detection Interval (milliseconds)
EXPO_PUBLIC_DETECTION_INTERVAL=1000

# Cooldown Period (milliseconds)
EXPO_PUBLIC_COOLDOWN_PERIOD=30000

# Minimum Motion Threshold
EXPO_PUBLIC_MIN_MOTION_THRESHOLD=50

# Maximum Motion Threshold
EXPO_PUBLIC_MAX_MOTION_THRESHOLD=500

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARN, ERROR, FATAL)
EXPO_PUBLIC_LOG_LEVEL=INFO

# Enable Console Logging
EXPO_PUBLIC_ENABLE_CONSOLE_LOGGING=true

# Enable Remote Logging
EXPO_PUBLIC_ENABLE_REMOTE_LOGGING=false

# Enable File Logging
EXPO_PUBLIC_ENABLE_FILE_LOGGING=false

# Maximum Log File Size (MB)
EXPO_PUBLIC_MAX_LOG_FILE_SIZE=10

# Maximum Log Files
EXPO_PUBLIC_MAX_LOG_FILES=5

# =============================================================================
# WEBRTC CONFIGURATION
# =============================================================================

# STUN Servers (comma-separated)
EXPO_PUBLIC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# TURN Server URL (optional)
EXPO_PUBLIC_TURN_SERVER_URL=

# TURN Server Username (optional)
EXPO_PUBLIC_TURN_SERVER_USERNAME=

# TURN Server Credential (optional)
EXPO_PUBLIC_TURN_SERVER_CREDENTIAL=

# ICE Candidate Pool Size
EXPO_PUBLIC_ICE_CANDIDATE_POOL_SIZE=10

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Enable Analytics
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Analytics Endpoint
EXPO_PUBLIC_ANALYTICS_ENDPOINT=

# Enable Performance Monitoring
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Performance Monitoring Endpoint
EXPO_PUBLIC_PERFORMANCE_MONITORING_ENDPOINT=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Advanced Features
EXPO_PUBLIC_ENABLE_ADVANCED_FEATURES=false

# Enable Experimental Features
EXPO_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable Debug Mode
EXPO_PUBLIC_DEBUG_MODE=false

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Development Server URL (development only)
EXPO_PUBLIC_DEV_SERVER_URL=http://localhost:4001

# Development WebSocket URL (development only)
EXPO_PUBLIC_DEV_WS_URL=ws://localhost:8080

# Enable Mock Data (development only)
EXPO_PUBLIC_ENABLE_MOCK_DATA=true

# Enable Network Logging (development only)
EXPO_PUBLIC_ENABLE_NETWORK_LOGGING=true

# Enable Performance Profiling (development only)
EXPO_PUBLIC_ENABLE_PERFORMANCE_PROFILING=false 